@model coreBookStore.Models.BookCategory
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<br />
<br />
<h2>Are you sure, you want to delete it?</h2>
<br />
<div class="card text-center mb-3" style="max-width: 540px;">

    <div class="card-body">
        <h5 class="card-title">Book Category Name : @Html.DisplayFor(model => model.BookCategoryName)</h5>
        <p class="card-text">Book Category Description : @Html.DisplayFor(model => model.BookCategoryDescription)</p>

    </div>
   

    @using (Html.BeginForm("Delete", "BookCategory", FormMethod.Post))
    {
        <p>
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-controller="BookCategory" asp-action="Index" class="btn btn-primary">Back To List</a>
        </p>
    }
</div>
