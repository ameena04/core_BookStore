@model OnlineBookStoreUser.Models.Orders

@{
    ViewData["Title"] = "OrderDetail";
    Layout = "~/Views/Shared/_PartialLayout.cshtml";
}

<h2>OrderDetail</h2>

<div class="col-md-3 col-md-3" style="float:left">
    <div class="list-group">
        <a class="list-group-item" asp-controller="Customers" asp-action="Profile" asp-route-id="@Model.CustomerId"><i class="glyphicon glyphicon-user" aria-hidden="true"></i>&nbsp; Profile</a>
        
        <a class="list-group-item" asp-controller="Customers" asp-action="ResetAddress"><i class="glyphicon glyphicon-edit" aria-hidden="true"></i>&nbsp; Reset Address</a>
        <a class="list-group-item" asp-controller="Customers" asp-action="ResetPassword"><i class="glyphicon glyphicon-wrench" aria-hidden="true"></i>&nbsp; Reset Password</a>
        <a class="list-group-item" asp-controller="Cart" asp-action="Index"><i class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></i>&nbsp; Cart</a>
        <a class="list-group-item" asp-controller="Customers" asp-action="OrderHistory" asp-route-id="@Model.CustomerId"><i class="glyphicon glyphicon-tasks" aria-hidden="true"></i>&nbsp; Order</a>
    </div>
</div>

<table class="table table-hover">
    <tr>

        <th>BookId</th>
        <th>BookName</th>

        <th>Action</th>
    </tr>
    @foreach (var Item in ViewBag.bookDetail)
    {
        <tr>

            <td>@Item.BookId</td>
            <td>@Item.BookName</td>
            <td>
                <a asp-controller="Book" asp-action="Details" class="btn btn-info"
                   asp-route-id="@Item.BookId">Book Details</a>
            </td>
        </tr>
    }

</table>
<a class="btn btn-info" asp-controller="Customers" asp-action="OrderHistory">Back</a>
<br />


